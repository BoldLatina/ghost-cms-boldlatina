{{#if is_featured_first}}
<img srcset="{{img_url feature_image size="m"}} 400w, 
			 {{img_url feature_image size="l"}} 800w,
			 {{img_url feature_image size="xl"}} 1600w"
	 sizes="(max-width:480px) 400px, 1600px"
	 src="{{img_url feature_image size="xl"}}"
	 loading="lazy"
	 alt="">
{{else if is_featured_other}}
<img srcset="{{img_url feature_image size="m"}} 400w, 
			 {{img_url feature_image size="l"}} 800w"
	 sizes="(max-width:480px) 400px, 800px"
	 src="{{img_url feature_image size="l"}}"
	 loading="lazy"
	 alt="">
{{else if is_special}}
<img src="{{img_url feature_image size="m"}}"
	 loading="lazy"
	 alt="">
{{else}}
<img srcset="{{img_url feature_image size="m"}} 400w, 
			 {{img_url feature_image size="l"}} 800w"
	 sizes="(max-width:480px) 400px, 800px"
	 src="{{img_url feature_image size="l"}}"
	 loading="lazy"
	 alt="">
{{/if}}