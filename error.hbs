{{!< default}}
<div class="custom-error custom-wrap global-padding global-dynamic-color">
	<div class="custom-container">
		<div class="custom-error-content custom-content">
			<h1>{{statusCode}}</h1>
			<p>{{message}}</p>
			<a href="{{@site.url}}" class="global-button">{{t "Back to homepage"}}</a>
		</div>
	</div>
	{{>images/background_cover background_cover=false}}
</div>
{{#get "posts" limit="4" include="authors,tags,tiers" as |special_posts|}}
	{{#if special_posts}}
		{{>related is_alternate=true label=(t "Check out the latest posts")}}
	{{/if}}
{{/get}}