{{#if show_site_logo}}
	{{#if @site.logo}}
	<a href="{{@site.url}}" class="is-logo{{#if show_background_for_logo_or_icon}} is-color-bg{{/if}}"><img src="{{@site.logo}}" alt="{{@site.title}} home"></a>
	{{else}}
	<a href="{{@site.url}}" class="is-title">{{@site.title}}</a>
	{{/if}}
	{{else if show_site_icon}}
	{{#if @site.icon}}
	<a href="{{@site.url}}" class="is-icon{{#if show_background_for_logo_or_icon}} is-color-bg{{/if}}"><img src="{{@site.icon}}" alt="{{@site.title}} home"></a>
	{{else}}
	<a href="{{@site.url}}" class="is-title">{{@site.title}}</a>
	{{/if}}
{{/if}}